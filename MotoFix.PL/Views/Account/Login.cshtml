@model LoginViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Login">




    <div class="form-group">
        <label asp-for="Email">ادخل البريد الالكترونى</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
            </div>
            <input asp-for="Email" class="form-control">
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="password">ادخل كلمة السر</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <input asp-for="Password" class="form-control">
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-sign-in">دخول <i class="fas fa-check-circle"></i></button>
</form>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}